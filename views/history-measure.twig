{% extends 'layout.twig' %}

{% block body %}
<div class="container">
    <h1>Sequence nÂ°{{selectedId}}</h1>
    <div>
        {% set counter = 1 %}
        {% for measure in result %}
        {% if measure.colour == 0 %}
        <div class="btn btn-light p-4 m-1" title="{{ measure.timestamp | date(" Y/m/d H:m:s") }}">
            <div style="min-width: 2em">{{ counter }}</div>
        </div>
        {% elseif measure.colour == 1 %}
        <div class="btn btn-primary p-4 m-1" title="{{ measure.timestamp | date(" Y/m/d H:m:s") }}">
            <div style="min-width: 2em">{{ counter }}</div>
        </div>
        {% elseif measure.colour == 2 %}
        <div class="btn btn-dark p-4 m-1" title="{{ measure.timestamp | date(" Y/m/d H:m:s") }}">
            <div style="min-width: 2em">{{ counter }}</div>
        </div>
        {% elseif measure.colour == 3 %}
        <div class="btn btn-danger p-4 m-1" title="{{ measure.timestamp | date(" Y/m/d H:m:s") }}">
            <div style="min-width: 2em">{{ counter }}</div>
        </div>
        {% elseif measure.colour == 4 %}
        <div class="btn btn-success p-4 m-1" title="{{ measure.timestamp | date(" Y/m/d H:m:s") }}">
            <div style="min-width: 2em">{{ counter }}</div>
        </div>
        {% elseif measure.colour == 5 %}
        <div class="btn btn-warning p-4 m-1" title="{{ measure.timestamp | date(" Y/m/d H:m:s") }}">
            <div style="min-width: 2em">{{ counter }}</div>
        </div>
        {% endif %}
        {% set counter = counter + 1 %}
        {% endfor %}
    </div>
</div>
{% endblock body %}