{% extends 'layout.twig' %}

{% block deferScripts %}
<script defer src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
<script defer src="/javascripts/index.js"></script>
{% endblock deferScripts %}

{% block body %}
<div class="container">
    <h1>Dashboard</h1>
    <div class="row">
        <div class="col">
            <p>Click the buttons to Start or End a sequence.</p>
            <div>
                <button class="btn btn-lg btn-success" id="start">Start</button>
                <button class="btn btn-lg btn-warning" id="end">End</button>
            </div>
        </div>
        <div class="col-3">
            <h3 class="mt-2">Current colour count</h3>
            <div class="btn btn-secondary p-4 m-1" id="chosen-color">
                <div style="min-width: 6em" id="chosen-colour-counter">{{ counter }}</div>
            </div>
        </div>
        <div class="col-3">
            <div class="card bg-secondary mb-3" id="status">
                <div class="card-body text-center">
                    <h4 class="card-title" id="status-text"> ---- </h4>
                </div>
            </div>
        </div>
    </div>

    <h2 class="mt-2">Latest sequence</h2>
    <canvas id="myChart"></canvas>
</div>
{% endblock %}