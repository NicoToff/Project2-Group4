// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Sequence {
  id            Int            @id @default(autoincrement())
  start         DateTime       @default(now())
  end           DateTime?
  w_count       Int?
  u_count       Int?
  b_count       Int?
  r_count       Int?
  g_count       Int?
  comment       String?
  chosen_colour ChosenColour[] // Only one !
  measures      Measure[]
}

model ChosenColour {
  id           Int      @id @default(autoincrement())
  colour_count Int?
  idSequence   Int
  sequence     Sequence @relation(fields: [sequenceId], references: [id])
  sequenceId   Int      @unique
}

model Measure {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime @default(now())
  colour     Int
  idSequence Int
  sequence   Sequence @relation(fields: [sequenceId], references: [id])
  sequenceId Int
}
